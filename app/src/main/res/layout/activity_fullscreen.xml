<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="liliaadvaitova.museumguide.FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent"
            android:weightSum="1"
            android:gravity="right"
            android:visibility="invisible">

            <Button
                android:id="@+id/dummy_button"
                style="?metaButtonBarButtonStyle"
                android:layout_width="359dp"
                android:layout_height="72dp"
                android:text="@string/dummy_button"
                android:layout_weight="0.01" />

        </LinearLayout>

        <Button
            android:text="Button"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/button"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="60dp"
            android:background="@drawable/btnmap" />

        <Button
            android:text=""
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:id="@+id/button3"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="60dp"
            android:background="@drawable/btnslide2"/>

        <Button
            android:text=""
            android:layout_width="307dp"
            android:layout_height="105dp"
            android:id="@+id/button4"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="30dp"
            android:background="@drawable/btnguidemode"/>

        <Button
            android:text=""
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:id="@+id/button2"
            android:layout_gravity="center_vertical|center"
            android:background="@drawable/btnslide1"/>
    </FrameLayout>

</FrameLayout>
